vp-traffic-monetisation-provider:
  image: java:8
  working_dir: /app
  net: host
  volumes:
    - ./app:/app

  command: java -Xmx128m -Xss256k -jar /app/vp-traffic-monetisation-provider-1.0.0.jar --spring.profiles.active=test

  ports:
    - 10010:10010
    - 23010:23010
    - 33010:33010

#  environment:
#    HOSTNAME: vpclub
#
#  extra_hosts:
#    vpclub: 172.16.5.23
  log_driver: syslog
  log_opt:
      syslog-address: "tcp://172.16.45.3:5000"
